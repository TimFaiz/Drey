<Page x:Class="UserChanel.Pages.AvtorizashenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserChanel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AvtorizashenPage">

    <Grid Background="Black">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Портфолио" Foreground="White" FontSize="25" HorizontalAlignment="Center"></TextBlock>
          <TextBlock Text="Login" Foreground= "White" FontSize="20"></TextBlock>
          <TextBox x:Name="TBLogin" Width="350" Height="20" TextAlignment="Left" TextChanged="TBLogin_TextChanged"></TextBox>
            <TextBlock Text="Password" Foreground="White" FontSize="20"></TextBlock>
            <TextBox x:Name="TBPassword" TextAlignment="Left"></TextBox>
            <TextBlock Text="Дата Рождения"  Foreground="White" FontSize="20"></TextBlock>
            <TextBox x:Name="TBGenderid" TextAlignment="Left"></TextBox>
                <Button x:Name="ABavorizashen" Content="Вход" Click="ABavorizashen_Click"></Button>
            
            
        </StackPanel>
    </Grid>
</Page>
